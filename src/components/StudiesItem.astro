---
interface Props{
    title: String,
    company: String,
    date: String
}

const {title, company, date} = Astro.props;
---
<div class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]">
    <div class="relative pb-12 md:col-span-2">
        <span class="text-blue-500 -left-[42px] absolute rounded-full text-5xl">&bull;</span>
        <h3 class="text-xl font-bold text-blue-400">{title}</h3>
        <h4 class="font-semibold text-xl text-white">{company}</h4>
        <time class="p-0 m-0 text-sm text-white/80">{date}</time>
    </div>
</div>