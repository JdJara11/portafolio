---
import Java from '../components/icons/Java.astro';
import JavaScript from '../components/icons/JavaScript.astro';
import Bootstrap from '../components/icons/Bootstrap.astro';
import Android from '../components/icons/Android.astro';
import Firebase from '../components/icons/Firebase.astro';
import Button from '../components/Button.astro';
import Github from './icons/Github.astro';

const TECHS = {
    JAVA: {
        name: "Java",
        class: "bg-[#003159] text-white",
        icon: Java
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-[#003159] text-white",
        icon: JavaScript
    },
    BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#003159] text-white",
    icon: Bootstrap
    },
    FIREBASE: {
        name: "Firebase",
        class: "bg-[#003159] text-white",
        icon: Firebase
    },
    ANDROID: {
        name: "Android",
        class: "bg-[#003159] text-white",
        icon: Android
    }
}

const PROJECTS = [
  {
    title: "HuellApp",
    description:
      "Aplicación android mobile para mascotas perdidas con Open Street map, base de datos NoSQL",
    link: "#",
    github: "https://github.com/JdJara11/AppMascotas",
    image: "/portafolio/projects/huellapp.webp",
    techs: [TECHS.JAVA, TECHS.ANDROID, TECHS.FIREBASE],
  },
  {title: "Cesde",
    description:
      "Simulación de sistema de renta carros, sesiones, CRUD, localStorage",
    link: "#",
    github: "https://github.com/JdJara11/Cesde",
    image: "/portafolio/projects/cesde.webp",
    techs: [TECHS.JAVASCRIPT, TECHS.BOOTSTRAP],
  }]
---
<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({image, title, description, github, techs})  => (
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
            <div class="w-full md:w-1/2">
                <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                    <img src={image} alt="proyecto" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy"/>
                </div>
            </div>    
            <div class="w-full md:w-1/2">
                <h3 class="text-2xl font-bold text-gray-100">
                    {title}
                </h3>
                <div class="flex flex-wrap mt-2">
                    <ul class="flex flex-row mb-2 gap-x-2">
                        {
                            techs.map((tech)=>(
                                <li>
                                    <span class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tech.class}`}>
                                        <tech.icon class="size-4"/> 
                                        {tech.name}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div class="mt-2 text-gray-400">{description}</div>
                <footer class="flex items-end justify-start mt-4 gap-x-4">
                    {
                        github &&(
                            <Button href={github}>
                                <Github class="size-6"/>
                                code
                            </Button>
                        )
                    }
                </footer>
            </div>
        </article>
        ))
    }
</div>